<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>1.0.9</Version>
    <Authors>Adam O'Neil</Authors>
    <Description>Lightweight json-based app and user settings, with support for DPAPI encryption</Description>
    <Copyright>Copyright (c) Adam O'Neil 2019</Copyright>
    <PackageLicenseUrl>https://github.com/adamosoftware/JsonSettings/blob/master/LICENSE</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/adamosoftware/JsonSettings</RepositoryUrl>
    <PackageTags>json settings encryption dpapi</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageReleaseNotes>Added optional ifNotExists arg on JsonFile.Load, along with optional customizeSettings delegate arg on Save(Async)</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
    <PackageReference Include="System.Security.Cryptography.ProtectedData" Version="4.5.0" />
  </ItemGroup>

</Project>
